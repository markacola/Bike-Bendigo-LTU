{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "comma-dangle": 0,
    "quotes": [ 1, "single" ],
    "no-undef": 1,
    "no-unused-vars": 1,
    "global-require": 0,
    "no-mixed-operators": 0,
    "no-param-reassign": 0,
    "no-nested-ternary": 0,
    "no-sparse-arrays": 0,
    "no-underscore-dangle": 0,
    "no-confusing-arrow": 0,
    "no-sequences": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  }
}
